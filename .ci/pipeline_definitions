terminal-controller-manager:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          terminal:
            inputs:
              repos:
                source: ~ # default
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/terminal-controller-manager'
    steps:
      check:
        image: 'golang:1.14.7'
  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C017DNNNENQ' # garden-dashboard channel
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
        publish:
          dockerimages:
            terminal:
              tag_as_latest: true
